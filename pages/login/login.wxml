<!--index.wxml-->
<view class="fix-with">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="userMobileInnfo">

    <view class="userMobileInnfo-title">请绑定手机号，以便我们更好的为您服务</view>

    <view class="userMobileInnfo-yzm">
      <view class="userMobileInnfo-yzm-lable">
        <label class="weui-label">手机号</label>
      </view>
      <view class="userMobileInnfo-yzm-mobile">
        <input class="weui-input" type="tel" placeholder="请输入手机号" />
      </view>
      <view class="userMobileInnfo-yzm-bt">
        <button class="weui-vcode-btn">获取验证码</button>
      </view>
    </view>
    <view class="userMobileInnfo-yzm">
      <view class="userMobileInnfo-yzm-lable">
        <label class="weui-label">验证码</label>
      </view>
      <view class="userMobileInnfo-yzm-mobile">
        <input class="weui-input" type="tel" placeholder="请输入手机号" />
      </view>
    </view>

    <view class="">
      <button class="weui-btn weui-btn_warn" type='warn'>绑定手机</button>
    </view>

  </view>

</view>